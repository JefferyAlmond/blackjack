<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/green"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/player_hand"
            android:id="@+id/textView"
            android:textColor="@color/yellow"
            android:singleLine="false"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/playerHandLayout">

        <ImageView
            android:id="@+id/imagePlayerCard1"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/card_back" />

        <ImageView
            android:id="@+id/imagePlayerCard2"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/card_back" />

        <ImageView
            android:id="@+id/imagePlayerCard3"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/card_back" />

        <ImageView
            android:id="@+id/imagePlayerCard4"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/card_back" />

        <ImageView
            android:id="@+id/imagePlayerCard5"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/card_back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/dealer_hand"
            android:id="@+id/textView2"
            android:textColor="@color/yellow"
            android:singleLine="false"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/dealerHandLayout">

        <ImageView
            android:id="@+id/imageDealerCard1"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/card_back" />

        <ImageView
            android:id="@+id/imageDealerCard2"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/card_back" />

        <ImageView
            android:id="@+id/imageDealerCard3"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/card_back" />

        <ImageView
            android:id="@+id/imageDealerCard4"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/card_back" />

        <ImageView
            android:id="@+id/imageDealerCard5"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/card_back" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_cash"
                android:id="@+id/totalCashText"
                android:textColor="@color/yellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_bet"
                android:id="@+id/currentBetText"
                android:textColor="@color/yellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player_score"
                android:id="@+id/playerScoreText"
                android:textColor="@color/yellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dealer_score"
                android:id="@+id/dealerScoreText"
                android:textColor="@color/yellow" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+10"
                    android:id="@+id/betPlusButton" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-10"
                    android:id="@+id/betMinusButton" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shoe_mode_on"
                android:id="@+id/shoeModeButton" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_game"
                android:id="@+id/newGameButton"
                android:gravity="center"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player_wins"
                android:id="@+id/winnerTextView"
                android:gravity="center"
                android:textColor="@color/yellow"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hit"
                android:id="@+id/hitButton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stand"
                android:id="@+id/standButton" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
